<div style="border: 1px solid #ccc; padding: 10px; margin: 10px 0;">
  <p><%= comment. body %></p>
  <small>Posted on <%= comment.created_at.strftime("%B %d, %Y") %></small>
  <%= button_to "Delete", blog_comment_path(comment.blog, comment), method: :delete, data: { confirm:  "Are you sure?" } %>
</div>