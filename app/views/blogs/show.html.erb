<p style="color: green"><%= notice %></p>
<p style="color: red"><%= alert %></p>

<%= render @blog %>

<div>
  <%= link_to "Edit this blog", edit_blog_path(@blog) %> |
  <%= link_to "Back to blogs", blogs_path %>

  <%= button_to "Destroy this blog", @blog, method: :delete %>
</div>

<hr>

<h3>Comments</h3>

<% if @blog.comments.any? %>
  <%= render @blog.comments %>
<% else %>
  <p>No comments yet.</p>
<% end %>

<hr>

<h3>Add a Comment</h3>

<%= form_with model: [@blog, Comment.new], local: true do |form| %>
  <div>
    <%= form.label :body, "Your Comment" %>
    <%= form.text_area :body, rows: 4, style: "width: 100%;" %>
  </div>

  <div style="margin-top: 10px;">
    <%= form.submit "Post Comment" %>
  </div>
<% end %>
